#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "trifle/docs"
require 'puma'
require 'byebug'

Trifle::Docs.configure do |config|
  config.harvester = Trifle::Docs::Harvester::Markdown.new(path: 'docs')
  config.templates = File.join(__dir__, '..', 'templates', 'simple')
end

Trifle::Docs::App.run!
